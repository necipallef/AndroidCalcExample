<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CalcButtonBaseStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/calc_button_height</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0.6dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CalcActionStyle" parent="CalcButtonBaseStyle">
        <item name="android:background">@drawable/calc_action_tv_bg</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CalcNumberStyle" parent="CalcButtonBaseStyle">
        <item name="android:background">@drawable/calc_number_tv_bg</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
